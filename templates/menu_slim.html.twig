<div class="d-md-none dropdown">
    <a class="btn btn-secondary dropdown-toggle" href="#" id="slim-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {% include "icon.html.twig" with {'icon': 'bars'} only %}
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="slim-menu">
        {% if app.user is not empty %}
            <h6 class="dropdown-header">{% include "icon.html.twig" with {'icon': 'user'} only %} {{ app.user.nom }}</h6>
            <a class="dropdown-item" href="{{ path('editer_etablissement') }}">{% include "icon.html.twig" with {'icon': 'edit'} only %} Éditer</a>
            <a class="dropdown-item" href="{{ path('security_logout') }}">{% include "icon.html.twig" with {'icon': 'sign-out-alt'} only %} Déconnexion</a>
        {% endif %}
        {% for menu_link in menu.links %}
            {% if menu_link.name != 'Accueil' %}
                {% if menu_link.menu is not empty %}
                    <div class="dropdown-divider"></div>
                    <h6 class="dropdown-header">{% if menu_link.icon is not empty %}{% include "icon.html.twig" with {'icon': menu_link.icon} only %} {% endif %}{{ menu_link.name }}</h6>
                    {% for sub_menu_link in menu_link.menu.links %}
                        {% include "menu_slim_link.html.twig" with {'link': sub_menu_link} only %}
                    {% endfor %}
                    <div class="dropdown-divider"></div>
                {% else %}
                    {% include "menu_slim_link.html.twig" with {'link': menu_link} only %}
                {% endif %}
            {% endif %}
        {% endfor %}
    </div>
</div>