<table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col"><i class="fas fa-school"></i> Ã‰tablissement</th>
        <th scope="col"><i class="fas fa-map-marked"></i> Adresse</th>
        <th scope="col"><i class="fas fa-id-card-alt"></i> Contact</th>
        <th scope="col"><i class="fab fa-telegram-plane"></i> Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for inscription in inscriptions %}
        <tr class="table-light">
            <th scope="row">{{ inscription.id }}</th>
            <td>{{ inscription.etablissement }}</td>
            <td>{{ inscription.cp }} {{ inscription.ville }}</td>
            <td>{{ inscription.role }} : {{ inscription.contact }} &lt;{{ inscription.email }}&gt; ({{ inscription.numero }})</td>
            <td>
                {% if inscription.statut.is(0) %}
                    <a href="{{ path('accepter_inscription', {'id': inscription.id}) }}" class="btn btn-success" data-toggle="tooltip" title="Valider"><i class="fas fa-check"></i></a>
                {% endif %}
                <a href="{{ path('refuser_inscription', {'id': inscription.id}) }}" class="btn btn-danger" data-toggle="tooltip" title="Refuser"><i class="fas fa-times"></i></a>
            </td>
        </tr>
    {% else %}
        <tr class="table-light"><td colspan="5">Aucune inscription en attente</td></tr>
    {% endfor %}
    </tbody>
</table>
