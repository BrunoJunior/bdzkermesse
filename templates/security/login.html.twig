<!DOCTYPE html>
<html class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/registration.css') }}">
    <link rel="stylesheet" href="{{ asset('css/colors.css') }}">
    <title>{% block title %}LA kermesse{% endblock %}</title>
</head>
<body class="h-100">

{% if error %}
    <div class="alert alert-danger fixed-top">
        {{ error.messageKey }}
    </div>
{% endif %}

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} fixed-top alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
{% endfor %}

<a class="fixed-bottom bg-white-t25" href="https://www.freepik.com/free-photos-vectors/people">People photo created by jcomp - www.freepik.com</a>

<div class="h-100 row align-items-center justify-content-center">
    <div class="p-3 rounded-lg bg-white-t50">
        <h2 class="mb-3 d-flex justify-content-center"><img id="logo" src="{{ asset('imgs/logo_texte_inv.png') }}"  alt="logo" /></h2>
        <form class="form-inline" action="{{ path('security_login') }}" method="post">
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control mb-2 mr-sm-2" placeholder="Code"/>
            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-lock"></i></div>
                </div>
                <input type="password" id="password" name="_password" class="form-control" />
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
            <button type="submit" class="btn btn-primary mb-2">
                <i class="fa fa-sign-in-alt"></i> Connexion
            </button>
            <a href="{{ path('demande_inscription') }}" class="btn btn-secondary mb-2 ml-2">
                <i class="fas fa-user-plus"></i> S'inscrire
            </a>
        </form>
    </div>
</div>

<script src="{{ asset('js/jquery.min.js') }}"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
