{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-5">
            <div class="well">
                <fieldset>
                    <legend><i class="fas fa-plus-circle"></i> Recette</legend>
                    {{ form_start(form) }}
                    {{ form_row(form.activite) }}
                    {{ form_row(form.montant) }}
                    {{ form_row(form.nombre_ticket) }}
                    <button class="btn btn-primary" type="submit">Enregistrer !</button>
                    {{ form_end(form) }}
                </fieldset>
            </div>
        </div>
    </div>
{% endblock %}