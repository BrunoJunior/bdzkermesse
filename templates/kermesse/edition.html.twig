{% extends 'base.html.twig' %}

{% block title %}Kermesse{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-5">
                <div class="well">
                    <fieldset>
                        <legend><i class="fas fa-edit"></i> Kermesse</legend>
                        {{ form_start(form) }}
                        {{ form_row(form.annee) }}
                        {{ form_row(form.theme) }}
                        {{ form_row(form.montant_ticket) }}
                        <button class="btn btn-primary" type="submit">Enregistrer !</button>
                        {{ form_end(form) }}
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
{% endblock %}