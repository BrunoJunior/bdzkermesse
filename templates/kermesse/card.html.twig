<div class="col-sm-6 col-md-4 col-lg-3 mb-3">
    <div class="card text-center">
        <div class="card-body">
            <h5 class="card-title"><i class="fas fa-calendar"></i> {{ kermesse.annee }} - {{ kermesse.theme }}</h5>
            {% if kermesse.MontantTicket > 0 %}
                <p class="card-text" data-toggle="tooltip" title="Montant d'un ticket"><i class="fas fa-ticket-alt"></i> {{ montants[kermesse.id]['ticket'] }}</p>
            {% endif %}
            <p class="card-text" data-toggle="tooltip" title="Recette"><i class="fas fa-plus"></i> {{ montants[kermesse.id]['recette'] }}</p>
            <p class="card-text" data-toggle="tooltip" title="Dépenses"><i class="fas fa-minus"></i> {{ montants[kermesse.id]['depense'] }}</p>
            <hr />
            <p class="card-text" data-toggle="tooltip" title="Balance"><i class="fas fa-balance-scale"></i> {{ montants[kermesse.id]['balance'] }}</p>
        </div>
        <div class="card-footer">
            <a href="{{ path('kermesse', {'id': kermesse.id}) }}" class="btn btn-primary" data-toggle="tooltip" title="Détail"><i class="fas fa-eye"></i></a>
            <a href="{{ path('editer_kermesse', {'id': kermesse.id}) }}" class="btn btn-secondary" data-toggle="tooltip" title="Modifier"><i class="fas fa-edit"></i></a>
            <a href="{{ path('nouveau_ticket', {'id': kermesse.id}) }}" class="btn btn-danger" data-toggle="tooltip" title="Nouvelle dépense"><i class="fas fa-receipt"></i></a>
            <a href="{{ path('nouvelle_recette', {'id': kermesse.id}) }}" class="btn btn-success" data-toggle="tooltip" title="Nouvelle recette"><i class="fas fa-donate"></i></a>
            <a href="{{ path('dupliquer_kermesse', {'id': kermesse.id}) }}" class="btn btn-warning" data-toggle="tooltip" title="Dupliquer"><i class="fas fa-clone"></i></a>
        </div>
    </div>
</div>