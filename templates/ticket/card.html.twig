<div class="card text-center">
    <div class="card-body">
        <h5 class="card-title"><i class="fas fa-barcode"></i> {{ ticket.numero }} <span  data-toggle="tooltip" title="{{ ticket.etat }}">{{ ticket.pastilleEtat|raw }}</h5>
        <p class="card-text" data-toggle="tooltip" title="Date"><i class="fas fa-calendar"></i> {{ ticket.date }}</p>
        <p class="card-text" data-toggle="tooltip" title="Acheteur"><i class="fas fa-user"></i> {{ ticket.acheteur }}</p>
        <p class="card-text" data-toggle="tooltip" title="Fournisseur"><i class="fas fa-truck"></i> {{ ticket.fournisseur }}</p>
        <p class="card-text" data-toggle="tooltip" title="Montant"><i class="fas fa-receipt"></i> {{ ticket.montant }}</p>
        <p class="card-text" data-toggle="tooltip" title="Activités liées"><i class="fas fa-link"></i> {{ ticket.activitesLiees }}</p>
    </div>
    <div class="card-footer">
        <div class="btn-group" role="group" aria-label="Actions">
            <a href="{{ path('editer_ticket', {'id': ticket.id}) }}" class="btn btn-primary" data-toggle="tooltip" title="Éditer"><i class="fas fa-edit"></i></a>
            {% if ticket.cheminFichier is not empty %}<a href="{{ app.request.getSchemeAndHttpHost() ~ path('ticket_duplicata', {'id': ticket.id}) }}" target="_blank" class="btn btn-secondary" data-toggle="tooltip" title="Duplicata"><i class="fas fa-file-image"></i></a>{% endif %}
            {% if ticket.entity.etat == 0 %}<a href="#" data-ajax="{{ path('supprimer_ticket', {'id': ticket.id}) }}" class="btn btn-danger ajax-remove" data-toggle="tooltip" title="Supprimer" data-ajax-validation="true"><i class="fas fa-trash-alt"></i></a>{% endif %}
        </div>
    </div>
</div>
