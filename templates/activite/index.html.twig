{% extends 'base.html.twig' %}

{% block title %}Activité - {{ activite.nom }}{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        {% include "activite/card.html.twig" with {'card': card} only %}
    </div>
    <fieldset>
        <legend>Recettes <a href="{{ path('nouvelle_recette_activite', {'id': activite.id}) }}" class="btn btn-primary" data-toggle="tooltip" title="Nouvelle recette"><i class="fas fa-plus"></i></a></legend>
        <div class="row">
            {% include "recette/table.html.twig" with {'recettes': recettes, 'total': total_recettes, 'activite': activite} only %}
        </div>
    </fieldset>
    <fieldset>
        <legend>Dépenses</legend>
        <div class="row">
            {% include "depense/table.html.twig" with {'depenses': depenses, 'total': total_depenses} only %}
        </div>
    </fieldset>
{% endblock %}