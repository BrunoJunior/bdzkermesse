{% extends 'base.html.twig' %}

{% block title %}Actions{% endblock %}

{% block stylesheets %}
    <style>
        html {
            height: 100%;
        }

        body {
            position: relative;
            height: 100%;
        }

        body::after {
            content: "";
            background: url("/imgs/actions_bg.jpg");
            opacity: 0.8;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            position: absolute;
            z-index: -1;
        }
    </style>
{% endblock %}

{% block body %}
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center pagination-lg">
            <li class="page-item">
                <a class="page-link" href="{{ path('lister_actions', {'annee': annee - 1}) }}"><i class="fas fa-chevron-left"></i></a>
            </li>
            <li class="page-item" aria-current="page">
                <span class="page-link">Actions {{ periode.debut|date('Y') }}-{{ periode.fin|date('Y') }}</span>
            </li>
            <li class="page-item">
                <a class="page-link" href="{{ path('lister_actions', {'annee': annee + 1}) }}"><i class="fas fa-chevron-right"></i></a>
            </li>
        </ul>
    </nav>
    {% if courante %}
        <div class="d-flex flex-row justify-content-center">
            <a href="{{ path('nouvelle_autre_activite') }}" class="btn btn-primary" data-toggle="tooltip" title="Nouvelle action"><i class="fas fa-plus"></i> Nouvelle action</a>
        </div>
    {% endif %}
    <div class="row">
        {% if activites is empty %}
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-center">
                <h5 class="card-title">Aucune action</h5>
            </div>
        </div>
        {% endif %}
        {% for activite in activites %}
            <div class="col-sm-6 col-md-4 col-lg-3 mb-3 ajax" data-ajax-url="{{ path('carte_activite', {'id': activite.id}) }}">
                <i class="fab fa-yelp fa-pulse fa-4x"></i>
            </div>
        {% endfor %}
    </div>
{% endblock %}
