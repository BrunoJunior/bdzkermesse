{% extends 'base.html.twig' %}

{% block title %}Actions{% endblock %}

{% block body %}
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center pagination-lg">
            <li class="page-item">
                <a class="page-link" href="{{ path('lister_actions', {'annee': annee - 1}) }}">Année précédente</a>
            </li>
            <li class="page-item active" aria-current="page">
                <span class="page-link">Actions {{ periode.debut|date('Y') }}-{{ periode.fin|date('Y') }}</span>
            </li>
            <li class="page-item">
                <a class="page-link" href="{{ path('lister_actions', {'annee': annee + 1}) }}">Année suivante</a>
            </li>
        </ul>
    </nav>
    <fieldset>
        <div class="row">
            {% if activites is empty %}
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card text-center">
                    <h5 class="card-title">Aucune action</h5>
                </div>
            </div>
            {% endif %}
            {% for activite in activites %}
                <div class="col-sm-6 col-md-4 col-lg-3 mb-3 ajax" data-ajax-url="{{ path('carte_activite', {'id': activite.id}) }}">
                    <i class="fab fa-yelp fa-pulse fa-4x"></i>
                </div>
            {% endfor %}
            {% if courante %}
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Nouvelle action</h5>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a href="{{ path('nouvelle_autre_activite') }}" class="btn btn-primary" data-toggle="tooltip" title="Nouvelle action"><i class="fas fa-plus"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </fieldset>
{% endblock %}
