{% extends 'base.html.twig' %}

{% block title %}Confirmation de remboursement{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-8 col-xl-5">
            <div class="well">
                <fieldset>
                    <legend><i class="fas fa-clipboard-check"></i> Confirmation de remboursement</legend>
                    {{ form_start(form) }}
                    {{ form_row(form.numero_suivi) }}
                    {{ form_row(form.montant) }}
                    {{ form_row(form.mode) }}
                    <button class="btn btn-primary" type="submit">Enregistrer !</button>
                    {{ form_end(form) }}
                </fieldset>
            </div>
        </div>
    </div>
{% endblock %}